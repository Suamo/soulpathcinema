<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:details='urn:import:client.widgets.detailsscreen'>
    <g:HTMLPanel styleName="displayNone" ui:field="detailsScreen">
        <div class="glassLayer fullScreen" ui:field="glassLayer"/>
        <div>
            <span ui:field="movieLink" class="grayButton">It's a movie</span>|
            <span ui:field="personLink" class="grayButton">It's a person</span>
        </div>
        <div>
            <details:MovieDetails ui:field="movieDetails"/>
            <details:PersonDetails ui:field="personDetails"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>