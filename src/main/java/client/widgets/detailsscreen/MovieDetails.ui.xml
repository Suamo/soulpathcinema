<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <ul class="movieDetails fullScreen">
            <li style="height:60px">
                title:
                <input type="text" placeholder="Add title here" class="editableInput movieTitle" ui:field="titleField"/>
            </li>
            <li>
                imdb id:
                <div>
                    <input type="text" placeholder="Add IMDB id here" class="editableInput imdbId" ui:field="imdbId"/>
                    <div class="imdbRedirection" ui:field="imdbRedirection"/>
                </div>
            </li>
            <li>
                director:
                <div class="movieDirector" ui:field="directorField"/>
            </li>
            <li>
                writer:
                <div class="movieWriter" ui:field="writerField"/>
            </li>
            <li>
                actors:
                <div class="movieActors" ui:field="actorsField"/>
            </li>
            <li>
                awards:
                <div class="movieAwards" ui:field="awardsField"/>
            </li>
            <li>
                imdb:
                <div class="movieImdbRating" ui:field="imdbRatingField"/>
            </li>
        </ul>
    </g:HTMLPanel>
</ui:UiBinder>