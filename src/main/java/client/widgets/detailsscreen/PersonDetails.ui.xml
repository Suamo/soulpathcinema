<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel addStyleNames="displayNone">
        <ul class="movieDetails fullScreen">
            <li style="height:60px">
                Name:
                <input type="text" placeholder="Add person name here" class="editableInput personName" ui:field="nameField"/>
            </li>
            <li style="height:60px">
                <span ui:field="directorFilter" class="directorFilter">Is Director:</span>
                <input type="checkbox" ui:field="isDirectorCheckbox"/>
            </li>
        </ul>
    </g:HTMLPanel>
</ui:UiBinder>